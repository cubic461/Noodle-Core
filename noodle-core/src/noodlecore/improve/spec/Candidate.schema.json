{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Candidate",
  "description": "A candidate solution for an improvement task in the Noodle Improvement Pipeline",
  "type": "object",
  "required": ["id", "task_id", "title", "description", "diff", "rationale"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the candidate",
      "format": "uuid"
    },
    "task_id": {
      "type": "string",
      "description": "ID of the task this candidate addresses",
      "format": "uuid"
    },
    "title": {
      "type": "string",
      "description": "Human-readable title for the candidate",
      "minLength": 1,
      "maxLength": 200
    },
    "description": {
      "type": "string",
      "description": "Description of the solution approach",
      "minLength": 1
    },
    "diff": {
      "type": "string",
      "description": "Unified diff of code changes",
      "minLength": 1
    },
    "rationale": {
      "type": "string",
      "description": "Explanation of why this solution works",
      "minLength": 1
    },
    "created_at": {
      "type": "string",
      "description": "Timestamp when candidate was created (ISO 8601)",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "description": "Timestamp when candidate was last updated (ISO 8601)",
      "format": "date-time"
    },
    "status": {
      "type": "string",
      "description": "Current status of the candidate",
      "enum": ["draft", "testing", "passed", "failed", "promoted", "rejected"],
      "default": "draft"
    },
    "evidence_ids": {
      "type": "array",
      "description": "List of evidence record IDs",
      "items": {
        "type": "string",
        "format": "uuid"
      },
      "default": []
    },
    "metadata": {
      "type": "object",
      "description": "Additional flexible metadata",
      "default": {}
    }
  }
}
