{
    "name": "noodlecore-lsp",
    "displayName": "NoodleCore Language Server",
    "description": "The Fastest LSP Implementation for the NoodleCore Language",
    "version": "0.1.0",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:noodle"
    ],
    "main": "./client/extension.js",
    "contributes": {
        "languages": [{
            "id": "noodle",
            "extensions": [".nc"],
            "aliases": ["NoodleCore", "noodle"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "noodle",
            "scopeName": "source.noodle",
            "path": "./syntaxes/noodle.tmLanguage.json"
        }]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/vscode": "^1.74.0",
        "@types/node": "16.x",
        "typescript": "^4.9.4"
    },
    "dependencies": {
        "vscode-languageclient": "^9.0.1"
    }
}
