<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CFBundleDevelopmentRegion</key>
	<string>$(DEVELOPMENT_LANGUAGE)</string>
	<key>CFBundleDisplayName</key>
	<string>NoodleControl</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>noodle_control_mobile_app</string>
	<key>CFBundlePackageType</key>
	<string>APPL</string>
	<key>CFBundleShortVersionString</key>
	<string>$(FLUTTER_BUILD_NAME)</string>
	<key>CFBundleSignature</key>
	<string>????</string>
	<key>CFBundleVersion</key>
	<string>$(FLUTTER_BUILD_NUMBER)</string>
	<key>LSRequiresIPhoneOS</key>
	<true/>
	<key>UILaunchStoryboardName</key>
	<string>LaunchScreen</string>
	<key>UIMainStoryboardFile</key>
	<string>Main</string>
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>UIViewControllerBasedStatusBarAppearance</key>
	<false/>
	<key>CADisableMinimumFrameDurationOnPhone</key>
	<true/>
	<key>UIApplicationSupportsIndirectInputEvents</key>
	<true/>
	
	<!-- Network and Security -->
	<key>NSAppTransportSecurity</key>
	<dict>
		<key>NSAllowsArbitraryLoads</key>
		<false/>
		<key>NSExceptionDomains</key>
		<dict>
			<key>localhost</key>
			<dict>
				<key>NSExceptionAllowsInsecureHTTPLoads</key>
				<true/>
			</dict>
			<key>192.168.1.1</key>
			<dict>
				<key>NSExceptionAllowsInsecureHTTPLoads</key>
				<true/>
			</dict>
			<key>api.noodlecontrol.com</key>
			<dict>
				<key>NSExceptionRequiresForwardSecrecy</key>
				<false/>
			</dict>
		</dict>
	</dict>
	
	<!-- Permissions -->
	<key>NSCameraUsageDescription</key>
	<string>This app needs camera access to scan QR codes and capture images for documentation.</string>
	<key>NSMicrophoneUsageDescription</key>
	<string>This app needs microphone access for voice commands and recording features.</string>
	<key>NSPhotoLibraryUsageDescription</key>
	<string>This app needs photo library access to select images for profiles and documentation.</string>
	<key>NSPhotoLibraryAddUsageDescription</key>
	<string>This app needs permission to save screenshots and exported files to your photo library.</string>
	
	<!-- Background Modes -->
	<key>UIBackgroundModes</key>
	<array>
		<string>background-fetch</string>
		<string>background-processing</string>
		<string>remote-notification</string>
	</array>
	
	<!-- URL Scheme for Deep Linking -->
	<key>CFBundleURLTypes</key>
	<array>
		<dict>
			<key>CFBundleTypeRole</key>
			<string>Editor</string>
			<key>CFBundleURLName</key>
			<string>noodlecontrol</string>
			<key>CFBundleURLSchemes</key>
			<array>
				<string>noodlecontrol</string>
			</array>
		</dict>
	</array>
	
	<!-- App Transport Security Settings -->
	<key>NSAppTransportSecurity</key>
	<dict>
		<key>NSAllowsArbitraryLoads</key>
		<false/>
	</dict>
	
	<!-- iOS 14+ Permissions -->
	<key>NSLocalNetworkUsageDescription</key>
	<string>This app needs local network access to communicate with Noodle development environment.</string>
	<key>NSLocalNetworkPrivacySettings</key>
	<dict>
		<key>NSServiceTypes</key>
		<array>
			<string>_http._tcp</string>
			<string>_https._tcp</string>
			<string>_ws._tcp</string>
			<string>_wss._tcp</string>
		</array>
	</dict>
	
	<!-- Face ID / Touch ID -->
	<key>NSFaceIDUsageDescription</key>
	<string>Use Face ID to authenticate and secure access to your Noodle development environment.</string>
	
	<!-- Bluetooth (if needed) -->
	<key>NSBluetoothAlwaysUsageDescription</key>
	<string>This app needs Bluetooth access to connect to development hardware.</string>
	<key>NSBluetoothPeripheralUsageDescription</key>
	<string>This app needs Bluetooth access to connect to development hardware.</string>
	
	<!-- Location (if needed) -->
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>This app needs location access to provide context-aware development features.</string>
</dict>
</plist>