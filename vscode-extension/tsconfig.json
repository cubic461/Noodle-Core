{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "outDir": "out",
        "lib": [
            "ES2020"
        ],
        "sourceMap": true,
        "rootDir": "src",
        "strict": false,
        "noEmitOnError": false,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": false
    },
    "include": [
        "src/extension.ts",
        "src/services/backendService.ts",
        "src/services/aiProviderService.ts",
        "src/lsp/lspManager.ts"
    ],
    "exclude": [
        "node_modules",
        ".vscode-test",
        "src/test",
        "src/infrastructure",
        "src/providers",
        "src/ui",
        "src/lsp/noodleLspServer.ts",
        "src/lsp/noodleLspClient.ts"
    ]
}
