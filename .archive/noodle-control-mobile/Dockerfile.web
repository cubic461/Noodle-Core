# Use Ubuntu as base image
FROM ubuntu:22.04 as builder

# Set environment variables to avoid interactive prompts
ENV DEBIAN_FRONTEND=noninteractive
ENV TZ=UTC

# Install dependencies
RUN apt-get update && apt-get install -y \
    curl \
    git \
    unzip \
    xz-utils \
    zip \
    libglu1-mesa \
    && rm -rf /var/lib/apt/lists/*

# Download and install Flutter
RUN git clone https://github.com/flutter/flutter.git /flutter -b stable
ENV PATH="/flutter/bin:$PATH"

# Run flutter doctor to initialize
RUN flutter doctor

# Set working directory
WORKDIR /app

# Copy pubspec file
COPY pubspec.yaml ./

# Download dependencies (this will generate pubspec.lock)
RUN flutter pub get

# Copy the rest of the source code
COPY . .

# Enable web support
RUN flutter config --enable-web

# Configure project for web platform
RUN flutter create . --platforms web

# Build the Flutter web app
RUN flutter build web --no-web-resources-cdn

# Production stage
FROM nginx:alpine

# Copy the built web app from the builder stage
COPY --from=builder /app/build/web /usr/share/nginx/html

# Copy nginx configuration
COPY nginx.conf /etc/nginx/nginx.conf

# Expose port 80
EXPOSE 80

# Start nginx
CMD ["nginx", "-g", "daemon off;"]