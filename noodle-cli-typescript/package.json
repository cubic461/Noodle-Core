    "devDependencies": {
        "@types/node": "^20.4.5",
        "@types/inquirer": "^9.0.3",
        "@types/fs-extra": "^11.0.1",
        "@types/glob": "^8.1.0",
        "@types/jest": "^29.5.3",
        "@typescript-eslint/eslint-plugin": "^6.2.0",
        "@typescript-eslint/parser": "^6.2.0",
        "eslint": "^8.45.0",
        "jest": "^29.6.1",
        "prettier": "^3.0.0",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.6"
