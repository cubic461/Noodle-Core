{
    "name": "noodle-cli",
    "version": "0.1.0",
    "description": "Command Line Interface for the Noodle programming language",
    "main": "dist/index.js",
    "bin": {
        "noodle": "dist/index.js"
    },
    "scripts": {
        "build": "tsc",
        "dev": "ts-node src/index.ts",
        "test": "jest",
        "lint": "eslint src --ext .ts",
        "format": "prettier --write src/**/*.ts"
