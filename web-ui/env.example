# ============================================
# NIP v3.0.0 Web UI - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# The .env file should NEVER be committed to version control

# ============================================
# API Configuration
# ============================================
# Base URL for the NIP API server
NIP_API_URL=http://localhost:8000

# Optional: API key for authentication
# Leave empty if no authentication is required
NIP_API_KEY=

# ============================================
# Model Configuration
# ============================================
# Default AI model to use
# Options: gpt-4, gpt-4-turbo, gpt-3.5-turbo, claude-3-opus, claude-3-sonnet
DEFAULT_MODEL=gpt-4

# Temperature for response generation (0.0 - 2.0)
# Lower values = more focused and deterministic
# Higher values = more creative and varied
TEMPERATURE=0.7

# Maximum tokens in AI responses
# Range: 100 - 32000
MAX_TOKENS=4000

# ============================================
# UI Configuration
# ============================================
# Default theme: dark or light
DEFAULT_THEME=dark

# Enable/disable response streaming
STREAM_RESPONSES=true

# Show AI thinking/reasoning process
SHOW_THINKING=false

# ============================================
# Advanced Settings
# ============================================
# Request timeout in seconds
REQUEST_TIMEOUT=120

# Number of retry attempts for failed requests
RETRY_ATTEMPTS=3

# Enable debug mode for detailed logging
DEBUG_MODE=false

# ============================================
# Session Configuration
# ============================================
# Enable session persistence
ENABLE_SESSION_PERSISTENCE=true

# Session timeout in minutes (0 = no timeout)
SESSION_TIMEOUT_MINUTES=0

# Maximum messages in session history
MAX_SESSION_HISTORY=100

# ============================================
# File Upload Configuration
# ============================================
# Maximum file size in MB
MAX_FILE_SIZE_MB=10

# Allowed file extensions (comma-separated)
ALLOWED_EXTENSIONS=py,js,ts,java,cpp,c,go,rs,txt,md,json,yaml,yml

# ============================================
# Export Configuration
# ============================================
# Default export format: json, markdown, or txt
DEFAULT_EXPORT_FORMAT=json

# Include metadata in exports
INCLUDE_METADATA=true

# ============================================
# Streamlit Configuration
# ============================================
# Server port (default: 8501)
SERVER_PORT=8501

# Server address (default: localhost)
SERVER_ADDRESS=localhost

# Enable CORS
ENABLE_CORS=false

# ============================================
# Logging Configuration
# ============================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path (leave empty to disable file logging)
LOG_FILE=

# ============================================
# Feature Flags
# ============================================
# Enable file analysis feature
ENABLE_FILE_ANALYSIS=true

# Enable conversation export
ENABLE_EXPORT=true

# Enable chat history persistence
ENABLE_HISTORY=true

# Enable syntax highlighting
ENABLE_SYNTAX_HIGHLIGHTING=true

# ============================================
# OpenAI API Configuration (if using OpenAI models)
# ============================================
# OpenAI API Key (required for GPT models)
OPENAI_API_KEY=

# OpenAI Organization ID (optional)
OPENAI_ORGANIZATION=

# ============================================
# Anthropic API Configuration (if using Claude models)
# ============================================
# Anthropic API Key (required for Claude models)
ANTHROPIC_API_KEY=

# Anthropic API version
ANTHROPIC_API_VERSION=2023-06-01

# ============================================
# Custom Configuration
# ============================================
# Add any custom environment variables here
# CUSTOM_VAR=value
